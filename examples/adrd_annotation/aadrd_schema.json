{
  "type": "object",
  "properties": {
    "adrd_status": {
      "type": "string",
      "enum": ["ADRD", "Non-ADRD"],
      "description": "Primary classification: ADRD (dementia/MCI) vs Non-ADRD"
    },
    "severity": {
      "type": "string",
      "enum": ["no_impairment", "MCI", "mild_dementia", "moderate_dementia", "severe_dementia"],
      "description": "Severity per NIA-AA: MCI=preserved function (CDR 0.5), dementia=impaired (CDR>=1)"
    },
    "etiology": {
      "type": "string",
      "enum": ["alzheimers", "vascular", "lewy_body", "frontotemporal", "mixed", "other_adrd", "delirium", "psychiatric", "medical", "none"],
      "description": "Specific etiology if ADRD, or cause if Non-ADRD"
    },
    "confidence": {
      "type": "string",
      "enum": ["high", "moderate", "low"],
      "description": "Confidence in classification"
    },
    "summary": {
      "type": "string",
      "description": "Brief clinical reasoning: key findings, functional status, domains affected"
    }
  },
  "required": ["adrd_status", "severity", "etiology", "confidence", "summary"]
}
