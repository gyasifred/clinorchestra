{
  "name": "extract_dates_and_times",
  "description": "Extract dates and times from clinical text in various formats. Essential for serial measurements and temporal reasoning.",
  "patterns": [
    {
      "pattern": "\\b(\\d{1,2})/(\\d{1,2})/(\\d{2,4})\\b",
      "description": "MM/DD/YYYY or DD/MM/YYYY format",
      "example_input": "Lab on 3/15/2024",
      "example_output": "3/15/2024"
    },
    {
      "pattern": "\\b(\\d{4})-(\\d{2})-(\\d{2})\\b",
      "description": "YYYY-MM-DD format (ISO)",
      "example_input": "Admitted 2024-03-15",
      "example_output": "2024-03-15"
    },
    {
      "pattern": "\\b(Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec)[a-z]*\\s+(\\d{1,2}),?\\s+(\\d{4})\\b",
      "description": "Month DD, YYYY format",
      "example_input": "March 15, 2024",
      "example_output": "March 15, 2024"
    },
    {
      "pattern": "\\b(\\d{1,2})\\s+(Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec)[a-z]*\\s+(\\d{4})\\b",
      "description": "DD Month YYYY format",
      "example_input": "15 March 2024",
      "example_output": "15 March 2024"
    },
    {
      "pattern": "\\b(hospital\\s+day|HD|post-op\\s+day|POD)\\s+#?(\\d+)\\b",
      "description": "Relative day notation",
      "example_input": "Hospital day 3",
      "example_output": "HD3"
    },
    {
      "pattern": "\\b(day|Day)\\s+(\\d+)\\b",
      "description": "Generic day reference",
      "example_input": "Day 5",
      "example_output": "Day 5"
    },
    {
      "pattern": "\\bat\\s+(\\d{1,2}):(\\d{2})\\s*(am|pm|AM|PM)?\\b",
      "description": "Time in HH:MM format",
      "example_input": "at 14:30",
      "example_output": "14:30"
    },
    {
      "pattern": "\\b(\\d{1,2})\\s*hours?\\s+ago\\b",
      "description": "Relative time (hours ago)",
      "example_input": "2 hours ago",
      "example_output": "2 hours ago"
    },
    {
      "pattern": "\\b(\\d+)\\s*days?\\s+(?:ago|prior|before|earlier)\\b",
      "description": "Relative time (days ago)",
      "example_input": "3 days ago",
      "example_output": "3 days ago"
    }
  ],
  "temporal_qualifiers": [
    {
      "pattern": "\\b(baseline|admission|initial|first)\\b",
      "description": "Baseline/initial timepoint"
    },
    {
      "pattern": "\\b(current|present|now|today|latest)\\b",
      "description": "Current timepoint"
    },
    {
      "pattern": "\\b(peak|maximum|highest|max)\\b",
      "description": "Peak value timepoint"
    },
    {
      "pattern": "\\b(nadir|lowest|minimum|min)\\b",
      "description": "Lowest value timepoint"
    },
    {
      "pattern": "\\b(discharge|final)\\b",
      "description": "Discharge/final timepoint"
    }
  ],
  "notes": [
    "Serial measurements require precise temporal tracking",
    "Watch for relative vs absolute dates",
    "Hospital day 1 typically = admission day",
    "Time of day important for medication timing and lab draws",
    "Use calculate_days_between_measurements function to compute intervals"
  ]
}
